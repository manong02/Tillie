# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-app.onrender.com

# Database (Render will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis Cache (for rate limiting)
REDIS_URL=redis://localhost:6379/1

# CORS Origins (add your frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.netlify.app

# Superuser Creation (for automatic admin user creation on deployment)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=secure-admin-password
